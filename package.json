{
	"name": "@harmoniclabs/use-cardano-wallet",
	"version": "0.1.0",
	"description": "A React hook to interact with Cardano wallets",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"browser": {
		"worker_threads": false
	},
	"type": "commonjs",
	"files": [
		"dist"
	],
	"scripts": {
		"test": "jest",
		"clear-jest": "jest --clearCache",
		"test-watch": "jest --watchman",
		"test-coverage": "jest --coverage",
		"build": "rm -rf ./dist && tsc --project ./tsconfig.json && tsc-alias -p ./tsconfig.json",
		"build:light": "tsc --project ./tsconfig.json && tsc-alias -p ./tsconfig.json",
		"buidl": "npm run build",
		"ci": "npm i && npm run test && npm run build",
		"start": "npm-run-all --parallel build:watch run:watch"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org"
	},
	"keywords": [
		"cardano",
		"plutus",
		"blockchain",
		"offchain",
		"ada",
		"dApp"
	],
	"author": "HarmonicLabs",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/HarmonicLabs/use-cardano-wallet.git"
	},
	"bugs": {
		"url": "https://github.com/HarmonicLabs/use-cardano-wallet/issues"
	},
	"homepage": "https://github.com/HarmonicLabs/use-cardano-wallet#readme",
	"funding": "https://github.com/sponsors/HarmonicLabs",
	"dependencies": {
		"@harmoniclabs/cbor": "^1.6.6",
		"@harmoniclabs/crypto": "^0.3.0",
		"@harmoniclabs/uint8array-utils": "^1.0.4",
		"immer": "^9.0.15",
		"zustand": "^4.0.0"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.28.0",
		"@babel/preset-typescript": "^7.27.1",
		"@types/jest": "^28.1.8",
		"@types/node": "^18.19.121",
		"@types/react": "^18.0.17",
		"@types/react-dom": "^18.0.6",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tsc-alias": "^1.8.16",
		"tslib": "^2.4.0",
		"typescript": "^5.9.3"
	}
}
